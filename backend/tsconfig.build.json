{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": false,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "noEmitOnError": false,
    "pretty": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "preserveConstEnums": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}