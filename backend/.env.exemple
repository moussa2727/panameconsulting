# Environnement de l'application
NODE_ENV=Production
APP_NAME=your-app-name
APP_VERSION=1.0.0
# DIFFERENTS SENDING AND RECEIVING ADMIN EMAIL SHOULD HAVE PANAME-CONSULTING'S 
EMAIL_USER=your-email
EMAIL_PASS= your-email-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# DATABASE CONFIGURATION
MONGODB_URI=mongodb://localhost:27017/panameConsultingDb
DB_HOST=localhost
DB_PORT=27017
DB_USER=panameUser
MAINTENANCE_MODE=false
FRONTEND_URL=http://localhost:5173

# SERVER CONFIGURATION
PORT=3000
BASE_URL=http://localhost:3000
DEFAULT_ADMIN_PASSWORD=Admin@12345

# JWT
JWT_SECRET= your-jwt-secret-key
JWT_EXPIRES=3600s  # 1 heure
JWT_EXPIRES_IN=3600s 
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key
JWT_REFRESH_EXPIRATION=7d
JWT_REFRESH_EXPIRES_IN=7d
JWT_ACCESS_EXPIRATION=15m
JWT_ACCESS_SECRET=your-jwt-access-secret-key
# Nouvelle configuration JWT
JWT_EXPIRATION=1h
REFRESH_EXPIRES_IN=7d
JWT_ISSUER=paname-consulting.api.com,http://localhost:3000,http://localhost:5173
JWT_AUDIENCE=https://your-website.com,http://localhost:5173,frontend-app,mobile-client
REFRESH_SECRET=your-jwt-refresh-secret-key
MAX_SESSIONS=2
# Chiffrement
ENCRYPTION_KEY=supersecretkey32charslong!
ENCRYPTION_IV_LENGTH=16

SESSION_TIMEOUT=3600

# Performance
MAX_QUERY_LIMIT=100
DEFAULT_CACHE_TTL=600

# ===== COOKIES =====
COOKIE_SECRET=your-cookie-secret-key
COOKIE_DOMAIN=localhost,https://your-website.com
# Production uniquement
# COOKIE_SECURE=true    

SAME_SITE=none         # Ou 'none' + Secure pour les cross-domain
HTTP_ONLY=true        # Protection contre XSS

# ===== CORS ORIGINS / PARAMETRES D'URL PERMISES =====
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ======================================
# Configuration de l'upload
# ======================================
# Dossier de stockage des uploads (relatif à la racine du projet)
UPLOAD_DIR=./uploads
# Taille maximale des fichiers uploadés (en octets)
MAX_FILE_SIZE=5242880 # 5MB
# Types MIME autorisés (séparés par des virgules)
ALLOWED_FILE_TYPES=image/webp,image/png,image/jpeg,image/avif
LOAD_DIR=./uploads

WEBSITE_URL=https://your-website.com
FRONTEND_URL=http://localhost:5173

# Frontend
VITE_API_URL=http://localhost:5173
VITE_APP_NAME=your-frontend-app
# Security
BCRYPT_ROUNDS=12

BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPTS_TTL_MINUTES=15
PASSWORD_RESET_EXPIRATION=3600000 # 1h